<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10sp"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/view_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/item_image"
                android:layout_width="90dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"

                android:layout_height="90dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageViewfragment"
                        android:layout_width="12dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="15dp"
                        android:background="@drawable/navimg">
                    </ImageView>


                    <TextView
                    android:id="@+id/discountmoneysubchild"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs259"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/nonmembersubchild"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="67 for non members"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/itemnamesubchild"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kabuli channa"
                    android:layout_gravity=""
                    android:layout_marginTop="8dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/ountitysubchild"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 kg"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp"
                    android:layout_marginBottom="20dp"
                    />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/totalitemmoneysubchild"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:text="Rs330"
                    android:textSize="14dp" />



                <Button
                    android:id="@+id/moneyOff_btnsubchild"
                    android:layout_width="70dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/design_default_color_primary"
                    android:gravity="center"
                    android:text=" 34% OFF"
                    android:textColor="@color/white" />


                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/addcartbuttonsubchild"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="20dp"
                    app:backGroundColor="@color/text_color">
                </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>


            </LinearLayout>



        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/view_color" />

    </LinearLayout>

</LinearLayout>