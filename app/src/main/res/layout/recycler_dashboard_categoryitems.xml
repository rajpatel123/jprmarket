<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGray"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/logoID1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/veg" />

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                    android:id="@+id/text_tv11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="UP TO 69% OFF"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"

                    android:textColor="@color/off_color"
                    android:layout_marginTop="20dp"
                    />
                    <TextView

                        android:layout_marginTop="10dp"
                        android:id="@+id/text_tv22"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Grocery and Staples"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/colorBlack"
                       android:gravity="center"/>


                    <TextView
                        android:id="@+id/text_tv33"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="pulse,Atta other Flours"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/card_color"
                        android:gravity="center"/>


                </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                       android:layout_marginLeft="40dp"
                        android:layout_height="200dp">

                        <View
                            android:layout_width="1px"
                            android:layout_height="wrap_content"
                            android:background="@color/view_color" />

                        <ImageView
                            android:id="@+id/arrow"
                            android:layout_marginLeft="10dp"
                            android:layout_width="20dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="20dp"

                            android:background="@drawable/ic_chevron_right" />
                    </LinearLayout>
        </LinearLayout>


</RelativeLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>

